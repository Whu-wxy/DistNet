{
    "dataset_reader": {
        "type": "squad",
         "lazy":true,
        "skip_invalid_examples": true,
        "token_indexers": {
            "token_characters": {
                "type": "characters",
                "character_tokenizer": {
                    "byte_encoding": "utf-8",
                    "end_tokens": [
                        260
                    ],
                    "start_tokens": [
                        259
                    ]
                },
                "min_padding_length": 5
            },
            "tokens": {
                "type": "single_id",
                "lowercase_tokens": true
            }
        }
    },
    "iterator": {
        "type": "bucket",
        "batch_size": 40,
        "sorting_keys": [
            [
                "passage",
                "num_tokens"
            ],
            [
                "question",
                "num_tokens"
            ]
        ]
    },
    "model": {
        "type": "bidaf",
    "initializer": [
[ ".*_text_field_embedder.*|_highway_layer._layers.*|.*_matrix_attention.*|.*_predictor.*",
		      {
		          "type": "pretrained",
		          "weights_file_path": "./bidaf.th"
		        }
        ]
    ],
        "dropout": 0.2,
        "modeling_layer": {
            "type": "on_lstm",
            "hidden_size": 200,
            "input_size": 800,
            "num_layers": 2,
            "chunk_size":10,
            "dropout":0.1,
            "dropconnect":0.1
        },
        "num_highway_layers": 2,
        "phrase_layer": {
            "type": "on_lstm",
            "hidden_size": 200,
            "input_size": 200,
            "num_layers": 2,
            "chunk_size":10,
            "dropout":0.1,

        },
        "similarity_function": {
            "type": "linear",
            "combination": "x,y,x*y",
            "tensor_1_dim": 200,
            "tensor_2_dim": 200
        },
        "span_end_encoder": {
            "type": "on_lstm",
            "dropout": 0.2,
            "hidden_size": 200,
            "input_size": 1400,
            "num_layers": 2,
            "chunk_size":10,
        },
        "text_field_embedder": {
            "token_embedders": {
                "token_characters": {
                    "type": "character_encoding",
                    "dropout": 0.2,
                    "embedding": {
                        "embedding_dim": 16,
                        "num_embeddings": 262
                    },
                    "encoder": {
                        "type": "cnn",
                        "embedding_dim": 16,
                        "ngram_filter_sizes": [
                            5
                        ],
                        "num_filters": 100
                    }
                },
                "tokens": {
                    "type": "embedding",
                    "embedding_dim": 100,
                    "pretrained_file": "/home/beidou/PythonWork/wxy/data/glove/glove.6B.100d.txt",
                    "trainable": false
                }
            }
        }
    },
    "train_data_path": "/home/beidou/PythonWork/wxy/data/SQuAD/train-v1.1.json",
    "validation_data_path": "/home/beidou/PythonWork/wxy/data/SQuAD/dev-v1.1.json",
    "trainer": {
        "cuda_device": 0,
        "grad_norm": 10,
        "learning_rate_scheduler": {
            "type": "reduce_on_plateau",
            "factor": 0.5,
            "mode": "max",
            "patience":5
        },
        "num_epochs": 30,
        "optimizer": {
            "type": "adam",
            "betas": [
                0.9,
                0.9
            ]
        },
        "patience": 10,
        "validation_metric": "+em"
    }
}
